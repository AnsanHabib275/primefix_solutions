rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() { return request.auth != null; }
    function is(uid) { return request.auth != null && request.auth.uid == uid; }
    function isAdmin() { return signedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'; }

    match /users/{uid} {
      allow read: if signedIn();
      allow create: if is(uid);
      allow update: if is(uid) || isAdmin();
    }

    match /workers/{uid} {
      allow read: if true;
      allow create, update: if is(uid);
      allow update: if isAdmin();
    }

    match /worker_locations/{uid} {
      allow read: if true;
      allow write: if is(uid);
    }

    match /jobs/{jobId} {
      allow read, create, update: if signedIn();
    }

    match /chats/{roomId} {
      allow read, write: if signedIn();
      match /messages/{msgId} {
        allow read, write: if signedIn();
      }
    }

    match /payments/{id} {
      allow read: if isAdmin() || resource.data.workerId == request.auth.uid || resource.data.customerId == request.auth.uid;
      allow write: if isAdmin();
    }

    match /configs/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
